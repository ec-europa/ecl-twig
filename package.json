{
  "private": true,
  "scripts": {
    "build:ec": "build-storybook -c src/ec/.storybook -o build/ec",
    "build:eu": "build-storybook -c src/eu/.storybook -o build/eu",
    "clean": "rimraf build",
    "dist": "npm run clean && npm run build:ec && npm run build:eu",
    "start:ec": "start-storybook -p 9001 -c src/ec/.storybook",
    "start:eu": "start-storybook -p 9001 -c src/eu/.storybook",
    "lint:js": "eslint .",
    "lint": "npm run lint:js",
    "postinstall": "lerna run postinstall && lerna run prepublish",
    "publish": "lerna publish",
    "publish-canary": "lerna publish --canary --yes",
    "publish-next": "lerna publish --npm-tag=next --bump=prerelease"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@storybook/addon-knobs": "4.1.6",
    "@storybook/addon-options": "4.1.6",
    "@storybook/addon-viewport": "4.1.6",
    "@storybook/html": "4.1.6",
    "babel-loader": "8.0.5",
    "eslint": "5.12.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-unicorn": "6.0.1",
    "husky": "1.3.1",
    "lerna": "3.10.5",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "rimraf": "2.6.3",
    "twig": "1.13.0",
    "twig-loader": "0.4.1",
    "webpack": "4.28.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,mdx,html,json,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "workspaces": [
    "src/ec/packages/*",
    "src/eu/packages/*"
  ]
}
