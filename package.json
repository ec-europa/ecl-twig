{
  "private": true,
  "scripts": {
    "build:ec": "build-storybook -c ./src/ec/.storybook -o build/ec",
    "build:eu": "echo \"Nothing to do...\"",
    "copy:static": "ncp static build",
    "clean": "rimraf build",
    "dist": "npm run clean && npm run build:ec && npm run build:eu && npm run copy:static",
    "jest": "jest",
    "jest-update": "jest -u",
    "lint:js": "eslint .",
    "lint": "npm run lint:js",
    "postinstall": "lerna run postinstall && lerna run prepublish",
    "pretty-check": "prettier --check \"src/**/*.{md,mdx,html,json,yml,js}\"",
    "publish": "scripts/publish.sh",
    "start:ec": "start-storybook -p 9001 -c ./src/ec/.storybook",
    "start:eu": "echo \"Nothing to do...\"",
    "update-version": "lerna version --conventional-commits --no-push --no-git-tag-version",
    "test": "npm run jest"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-react": "7.0.0",
    "@ecl-twig/storybook-addon-code": "file:utils/storybook-addon-code",
    "@ecl-twig/storybook-addon-notes": "file:utils/storybook-addon-notes",
    "@ecl-twig/test-utils": "file:utils/test-utils",
    "@storybook/addon-knobs": "5.0.3",
    "@storybook/addon-options": "5.0.3",
    "@storybook/addon-viewport": "5.0.3",
    "@storybook/html": "5.0.3",
    "babel-jest": "24.8.0",
    "babel-loader": "8.0.6",
    "clipboard": "2.0.4",
    "deepmerge": "3.2.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-jest": "22.7.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.13.0",
    "eslint-plugin-unicorn": "9.1.0",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "js-beautify": "1.10.0",
    "lerna": "3.15.0",
    "lint-staged": "8.2.1",
    "marked": "0.6.2",
    "ncp": "2.0.0",
    "prettier": "1.18.2",
    "prismjs": "1.16.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "rimraf": "2.6.3",
    "twig": "1.13.3",
    "twig-loader": "0.4.1",
    "webpack": "4.35.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,mdx,html,json,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "workspaces": [
    "src/ec/packages/*",
    "src/eu/packages/*"
  ],
  "jest": {
    "verbose": true
  }
}
