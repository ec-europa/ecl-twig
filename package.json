{
  "private": true,
  "scripts": {
    "build:ec": "build-storybook -c ./src/ec/.storybook -o build/ec",
    "build:eu": "echo \"Nothing to do...\"",
    "build-storybook": "build-storybook -c php/.storybook -o php/dist && yarn copy:php && yarn fix-php-dist",
    "check-release": "scripts/check-packages.sh",
    "copy:static": "ncp static build",
    "copy:php": "node_modules/@ecl-twig/php-storybook/resources/get-assets.js",
    "clean": "rimraf build dist",
    "clean:php": "rimraf php/dist php/packages/",
    "deploy-storybook-php": "gh-pages -d php/dist",
    "dist": "npm run clean && npm run build:ec && npm run build:eu && npm run copy:static",
    "dist:php": "yarn render && yarn copy:php && npm run build-storybook",
    "fix-php-dist": "node_modules/@ecl-twig/php-storybook/resources/fix-build.js",
    "jest": "jest",
    "jest-update": "jest -u",
    "lint:js": "eslint .",
    "lint:bash": "shellcheck **/*.sh",
    "lint": "npm run lint:js",
    "pretty:php": "yarn php-html-fix && yarn php-story-fix",
    "postinstall": "lerna run postinstall && lerna run prepublish && patch-package",
    "php-story-fix": "prettier --write \"php/**/*.story.js\"",
    "php-html-fix": "prettier --write \"php/packages/**/*.html\"",
    "pretty-check": "prettier --check \"src/**/*.{md,mdx,html,json,yml,js}\"",
    "pretty-fix": "prettier --write \"src/**/*.{md,mdx,html,json,yml,js}\"",
    "publish": "scripts/publish.sh",
    "start:ec": "start-storybook -p 9001 -c src/ec/.storybook",
    "start:eu": "echo \"Nothing to do...\"",
    "start:php-ec": "yarn clean:php && yarn render && yarn storybook-php",
    "storybook-php": "start-storybook -s ./static/images -p 9002 -c php/.storybook",
    "render": "yarn clean:php && yarn render:setupPhp && yarn render:dataGen && yarn render:php && yarn render:js && yarn pretty:php",
    "render:dataGen": "babel-node ./node_modules/@ecl-twig/php-storybook/scripts/generate-data-files.js",
    "render:php": "cd ./node_modules/@ecl-twig/php-storybook && composer render",
    "render:js": "node_modules/@ecl-twig/php-storybook/scripts/render.js",
    "render:setupPhp": "cd ./node_modules/@ecl-twig/php-storybook && composer install",
    "update-version": "lerna version --conventional-commits --no-push --no-git-tag-version",
    "test": "npm run jest"
  },
  "devDependencies": {
    "@babel/core": "7.7.4",
    "@babel/node": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "@babel/preset-react": "7.7.4",
    "@ecl-twig/data-utils": "file:utils/data-utils",
    "@ecl-twig/php-storybook": "file:php/php_storybook",
    "@ecl-twig/storybook-addon-code": "file:utils/storybook-addon-code",
    "@ecl-twig/storybook-addon-diff": "file:utils/storybook-addon-diff",
    "@ecl-twig/storybook-addon-jscode": "file:utils/storybook-addon-jscode",
    "@ecl-twig/storybook-addon-notes": "file:utils/storybook-addon-notes",
    "@ecl-twig/test-utils": "file:utils/test-utils",
    "@storybook/addon-knobs": "5.2.8",
    "@storybook/addon-options": "5.2.8",
    "@storybook/addon-viewport": "5.2.8",
    "@storybook/html": "5.2.8",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "babel-plugin-preval": "3.0.1",
    "clipboard": "2.0.4",
    "deepmerge": "3.2.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.17.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-unicorn": "9.1.0",
    "file-system": "2.2.2",
    "gh-pages": "2.1.1",
    "html-differ": "1.4.0",
    "husky": "2.4.1",
    "jest": "24.9.0",
    "jq-cli-wrapper": "1.6.1",
    "js-beautify": "1.10.2",
    "lerna": "3.19.0",
    "lint-staged": "8.2.1",
    "marked": "0.6.2",
    "ncp": "2.0.0",
    "netlify-cli": "2.21.0",
    "node-fetch": "2.6.0",
    "patch-package": "6.2.0",
    "prettier": "1.19.1",
    "prismjs": "1.17.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "replace-in-file": "4.2.0",
    "rimraf": "2.6.3",
    "shellcheck": "0.3.0",
    "twing": "2.3.7",
    "twing-loader": "2.0.2",
    "webpack": "4.41.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,mdx,html,json,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "workspaces": [
    "src/ec/packages/*",
    "src/eu/packages/*",
    "src/php/packages/*"
  ],
  "jest": {
    "verbose": true
  }
}
