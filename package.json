{
  "private": true,
  "scripts": {
    "build:ec": "build-storybook -c ./src/ec/.storybook -o build/ec",
    "build:eu": "echo \"Nothing to do...\"",
    "check-release": "scripts/check-packages.sh",
    "copy:static": "ncp static build",
    "clean": "rimraf build dist",
    "clean-php": "rimraf build php/ec/packages/",
    "dist": "npm run clean && npm run build:ec && npm run build:eu && npm run copy:static",
    "jest": "jest",
    "jest-update": "jest -u",
    "lint:js": "eslint .",
    "lint:bash": "shellcheck **/*.sh",
    "lint": "npm run lint:js",
    "postinstall": "lerna run postinstall && lerna run prepublish && patch-package",
    "pretty-check": "prettier --check \"src/**/*.{md,mdx,html,json,yml,js}\"",
    "pretty-fix": "prettier --write \"src/**/*.{md,mdx,html,json,yml,js}\"",
    "publish": "lerna publish",
    "publish-canary": "lerna publish --canary --yes",
    "publish-next": "lerna publish --npm-tag=next --bump=prerelease",
    "start:ec": "start-storybook -p 9001 -c src/ec/.storybook",
    "start:eu": "echo \"Nothing to do...\"",
    "start:php-ec": "yarn clean-php && yarn render:setupPhp && yarn render:dataGen && yarn render:php && yarn storybook-php",
    "storybook-php": "start-storybook -s ./static/images -p 9002 -c php/.storybook",
    "render:dataGen": "babel-node ./scripts/generate-data-files.js",
    "render:setupPhp": "cd ./node_modules/@ecl-twig/php-renderer && composer install",
    "render:php": "cd ./node_modules/@ecl-twig/php-renderer && composer render",
    "render:js": "./scripts/generate-html.js",
    "update-version": "lerna version --conventional-commits --no-push --no-git-tag-version",
    "test": "npm run jest"
  },
  "devDependencies": {
    "@babel/node": "7.6.0",
    "@babel/core": "7.6.4",
    "@babel/preset-env": "7.6.3",
    "@babel/preset-react": "7.0.0",
    "@ecl-twig/data-utils": "file:utils/data-utils",
    "@ecl-twig/storybook-addon-code": "file:utils/storybook-addon-code",
    "@ecl-twig/storybook-addon-notes": "file:utils/storybook-addon-notes",
    "@ecl-twig/test-utils": "file:utils/test-utils",
    "@ecl-twig/php-renderer": "file:php/renderer",
    "@storybook/addon-knobs": "5.2.5",
    "@storybook/addon-options": "5.2.5",
    "@storybook/addon-viewport": "5.2.5",
    "@storybook/html": "5.2.5",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "babel-plugin-preval": "3.0.1",
    "clipboard": "2.0.4",
    "deepmerge": "3.2.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.17.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-unicorn": "9.1.0",
    "file-system": "2.2.2",
    "husky": "2.4.1",
    "jest": "24.9.0",
    "jq-cli-wrapper": "1.6.1",
    "js-beautify": "1.10.2",
    "lerna": "3.16.4",
    "lint-staged": "8.2.1",
    "marked": "0.6.2",
    "ncp": "2.0.0",
    "patch-package": "6.2.0",
    "prettier": "1.18.2",
    "prismjs": "1.17.1",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "rimraf": "2.6.3",
    "shellcheck": "0.3.0",
    "twing": "2.3.7",
    "twing-loader": "2.0.2",
    "webpack": "4.40.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,mdx,html,json,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "workspaces": [
    "src/ec/packages/*",
    "src/eu/packages/*",
    "src/php/packages/*"
  ],
  "jest": {
    "verbose": true
  }
}
