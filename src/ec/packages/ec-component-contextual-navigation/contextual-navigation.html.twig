{#
  Parameters:
    - "extra_classes" (string) (default: '')
    - "extra_attributes" (array) (default: []): format: [
        {
          "name" (string) (default: ''),
          "value" (string) (default: '')
        },
        ...
      ]
#}

{# Internal properties #}

{% set _css_class = 'ecl-contextual-navigation' %}
{% set _extra_attributes = '' %}

{% set _label = label|default('') %}
{% set _items = items|default({}) %}
{% set _item_more = item_more|default({}) %}

{# Internal logic - Process properties #}

{% if extra_classes is defined and extra_classes is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ extra_classes %}
{% endif %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name ~ '="' ~ attr.value ~ '"' %}
  {% endfor %}
{% endif %}

{# Print the result #}

{% spaceless %}
<nav
  class="{{ _css_class }}"{{ _extra_attributes|raw }}
  data-ecl-contextual-navigation="true">
  <div class="ecl-contextual-navigation__label">{{- _label -}}</div>
  <ul
    class="ecl-contextual-navigation__list"
    data-ecl-contextual-navigation-list="true"
  >
    {% if _items is not empty and _items is iterable %}
      {% for item in _items %}
      <li class="ecl-contextual-navigation__item">
      {%- include '../ec-component-link/link.html.twig' with item|merge({
        extra_classes: 'ecl-contextual-navigation__link',
        link: item,
      }) -%}
      </li>
      {% endfor %}
    {% endif %}
    {% if _item_more is not empty %}
    <li class="ecl-contextual-navigation__item ecl-contextual-navigation__item--more">
    {%- include '../ec-component-button/button.html.twig' with _item_more|merge({
      extra_attributes: [
        { name: 'data-ecl-contextual-navigation-more', value: 'true' }
      ],
      extra_classes: 'ecl-contextual-navigation__more',
    }) -%}
    </li>    
    {% endif %}
  </ul>
</nav>
{% endspaceless %}
