{#
  Parameters:
  - "items" (array of objects)
#}

{% extends "@ecl-twig/ec-component-ecl-compliance/ecl-compliance.html.twig" %}

{% set component = 'description-list' %}
{% set message = '' %}
{% set no_items_case = items is not defined or items is empty or items is not iterable %}
{% set no_term_case = false %}
{% set no_term_in_item_case = false %}
{% set no_definition_case = false %}
{% set no_definition_in_item_case = false %}

{% if no_items_case == false %}
  {% for item in items %}
    {% if item.label is not defined or item.label is empty %}
      {% set no_label_case = true %}
    {% endif %}
    {% if item.term is defined and item.term is not empty and item.term is iterable %}
      {% for term in item.term %}
        {% if term is empty %}
          {% set no_term_in_item_case = true %}
        {% endif %}
      {% endfor %}
    {% elseif item.term is defined and item.term is empty %}
      {% set no_term_case = true %}
    {% endif %}
  {% endfor %}
{% endif %}

{% set not_compliant = no_term_case or no_items_case or no_term_in_item_case %}

{% if no_items_case %}
  {% set message = message ~ ' We cannot render a list without any item, "items" should be set and filled in with an array of items.' %}
{% endif %}
{% if no_term_case %}
  {% set message = message ~ ' No term in the list should be empty.' %}
{% endif %}
{% if no_term_in_item_case %}
  {% set message = message ~ ' Each item in the "term" is required to be present.' %}
{% endif %}
