{#
  Parameters:
  - "item" (object)
    - "path" (string)
    - "image" (object)
    - "video" (object)
    - "alt" (string)
    - "description" (string)
    - "meta" (string)
    - "icon" (object)
    - "share_path" (string) (default: '')
#}

{% extends "@ecl-twig/ec-component-ecl-compliance/ecl-compliance.html.twig" %}
{% set component = 'gallery-item' %}
{% set message = '' %}

{% set no_video_source_case = true %}
{% set no_image_source_case = true %}
{% set no_video_sources_case = false %}
{% set no_item_path_case = false %}
{% set no_item_alt_case = false %}
{% set no_icon_case = false %}

{% set no_item_case = item is empty %}
{% if no_item_case == false %}
  {% set no_icon_case = (item.video is defined and item.video is not empty) and (item.icon is not defined or item.icon is empty) %}
  {% set no_video_sources_case = (item.video is defined and (item.video.src is not defined or item.video.src is empty or item.video.src is not iterable)) %}
    {% if no_video_sources_case == false %}
      {% for source in item.video.src %}
        {% if loop.start and source.src is not empty %}
          {% set no_video_source_case = false %}
        {% endif %}
      {% endfor %}
    {% endif %}
    {% if item.image is defined and item.image is not empty %}
      {% if item.image.src is defined and item.image.src is not empty %}
         {% set no_image_source_case = false %}
      {% endif %}
      {% if (item.image.alt is not defined or item.image.alt is empty) and
        (item.alt is not defined or item.alt is empty) %}
         {% set no_item_alt_case = true %}
      {% endif %}
    {% else %}
      {% set no_image_source_case = false %}
    {% endif %}
    {% if no_image_source_case and no_video_source_case %}
      {% set no_item_path_case = item.path is not defined or item.path is empty %}
    {% endif %}
  {% set no_item_alt_case = item.alt is not defined or item.alt is empty %}
{% endif %}

{% set not_compliant =
  no_item_case or
  no_item_path_case or
  no_item_alt_case or
  no_image_source_case or
  no_icon_case
%}

{% if no_item_case %}
  {% set message = message ~ ' "item" needs to contain a "path", an "alt" and a "description".' %}
{% endif %}
{% if no_item_path_case %}
  {% set message = message ~ ' "item.path" is mandatory.' %}
{% endif %}
{% if no_item_alt_case %}
  {% set message = message ~ ' When the "item" is an image, one of "item.image.alt" or "item.alt" needs to be set and filled in.' %}
{% endif %}
{% if no_image_source_case %}
  {% set message = message ~ ' When the "item" is an image, the "image.src" needs to be set and filled in.' %}
{% endif %}
{% if no_icon_case %}
  {% set message = message ~ ' When the "item" is a video, the "item.icon" needs to be set and contain a "path", a "name" and a "type" properties set and filled in.' %}
{% endif %}
