{#
  Parameters:
  - variant: (string),
  - title: (string),
  - close: (object)
  - description (text)
#}

{% extends "@ecl-twig/ec-component-ecl-compliance/ecl-compliance.html.twig" %}

{% set component = 'message' %}
{% set message = '' %}
{% set no_title_case = title is empty %}
{% set no_description_case = description is empty %}
{% set no_close_button_label_case = close.label is not defined or close.label is empty %}

{% set not_compliant = no_title_case or no_description_case or no_close_button_label_case %}

{% if no_title_case %}
  {% set message = message ~ ' "title" is mandatory.' %}
{% endif %}
{% if no_description_case %}
  {% set message = message ~ ' "description" text is mandatory.' %}
{% endif %}
{% if no_close_button_label_case %}
  {% set message = message ~ ' "close.label" is mandatory. We need it for the close button to be compliant.' %}
{% endif %}
