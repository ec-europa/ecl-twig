{#
  Parameters:
  - "headers" (array of objects)
  - "rows" (array of objects)
#}

{% extends "@ecl-twig/ec-component-ecl-compliance/ecl-compliance.html.twig" %}

{% set message = '' %}
{% set component = 'table' %}
{% set no_headers_case = headers is not defined or headers is empty or headers is not iterable %}
{% set no_rows_case = rows is not defined or rows is empty or rows is not iterable %}
{% set not_compliant = no_headers_case or no_rows_case %}
{% if no_rows_case %}
  {% set message = message ~ ' No table row has been provided, "rows" should be defined and containing an array or items.' %}
{% endif %}
{% if no_headers_case %}
  {% set message = message ~ ' No table headers has been provided, "headers" should be defined and containing an array or items.' %}
{% endif %}
