{#
  Parameters:
  - "item" (object)
    - "video" (object)
        - "sources" (array of objects)
          - "src" (string)
          - "type" (string)
        - "tracks" (array of objects)
          - "src" (string)
          - "src_lang" (string)
          - "kind" (string)
          - "label" (string)
        - "poster" (string)
#}

{% extends "@ecl-twig/ec-component-ecl-compliance/ecl-compliance.html.twig" %}
{% set component = 'gallery-video' %}
{% set no_source_keys_case = false %}
{% set no_tracks_keys_case = false %}
{% set no_item_case = item is empty %}

{% if no_item_case == false %}
  {% set no_sources_case = item.sources is not defined or item.sources is empty or item.sources is not iterable %}
  {% if no_sources_case == false %}
    {% for source in item.sources %}
      {% if (source.src is not defined or source.src is empty) or
        (source.type is not defined or source.type is empty) %}
        {% set no_source_keys_case = true %}
      {% endif %}
    {% endfor %}
  {% endif %}
  {% set no_tracks_case = item.tracks is not defined or item.tracks is empty or item.tracks is not iterable %}
  {% if no_tracks_case == false %}
    {% for track in tracks %}
      {% if (track.kind is not defined or track.kind is empty) or
        (track.label is not defined or track.label is empty) or
        (track.src is not defined or track.src is empty) or
        (track.src_lang is not defined or track.src_lang is empty) %}
        {% set no_tracks_keys_case = true %}
      {% endif %}
    {% endfor %}
  {% endif %}
{% endif %}

{% set not_compliant =
  no_source_keys_case or
  no_tracks_keys_case or
  no_item_case %}

{% if no_source_keys_case %}
  {% set message = message ~ '"item.sources" should be an array with a "src" and a "type" properties for each element.' %}
{% endif %}
{% if no_tracks_keys_case %}
  {% set message = message ~ '"item.tracks" should be an array with a "label", a "src", a "src_lang" and a "kind" properties for each element.' %}
{% endif %}
{% if no_item_case %}
  {% set message = message ~ '"item" should contain an array of "sources" and "tracks".' %}
{% endif %}
