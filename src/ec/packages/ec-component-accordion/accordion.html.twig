{% spaceless %}

{#
  Parameters:
    - "items" (array) (default: []): format: [
      {
        "id": (string),
        level: (string),
        toggle: (predefined structure): see Button component, format: {
          label: (string),
          icon: (predefined structure): see Icon component,
        },
        content: (block),
      },
      ...
    ]
    - "extra_classes" (string) (default: '')
    - "extra_attributes" (array) (default: []): format: [
        {
          "name" (string) (default: ''),
          "value" (string) (default: '')
        },
        ...
      ]
#}

{# Internal properties #}

{% set _css_class = 'ecl-accordion' %}
{% set _extra_attributes = '' %}
{% set _items = items|default([]) %}

{# Internal logic - Process properties #}

{% if extra_classes is defined and extra_classes is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ extra_classes %}
{% endif %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name ~ '="' ~ attr.value ~ '"' %}
  {% endfor %}
{% endif %}

{# Print the result #}

<dl
  class="{{ _css_class }}"{{ _extra_attributes|raw }}
  data-ecl-accordion="true"
  role="presentation"
>
  {% if _items is not empty %}
    {% for item in _items %}
      <dt aria-level="{{ item.level }}" role="heading">
        {% include '../ec-component-button/button.html.twig' with {
          label: item.toggle.label,
          variant: 'ghost',
          type: 'button',
          icon: item.toggle.icon,
          icon_position: "before",
          extra_classes: 'ecl-accordion__toggle',
          extra_attributes: [
            { name: 'aria-controls', value: item.id },
            { name: 'data-ecl-accordion-toggle', value: 'true' },
          ]
        } only %}
      </dt>
      <dd
        class="ecl-accordion__content"
        hidden
        id="{{ item.id }}"
        role="region"
      >
        {%- set _content = item.content|default('') -%}
        {%- block content _content -%}
      </dd>
    {% endfor %}
  {% endif %}
</dl>

{% endspaceless %}
