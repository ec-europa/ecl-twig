{% spaceless %}

{#
  Parameters:
  - "group" (string) (default: 'group1'): 'group1', 'group2' or 'group3'
  - "sections" (array of objects) (default: []):
    - "section_id" (integer) (default: '') The id will be used to form the class name
    - "title" (optional) (string) OR (object with Link component in property)
    - "title_class_name" (optional) (string) (default: '')
    - "description" (optional) (string) (default: '')
    - "content_before" (optional) (string) (default: '')
    - "list_class_name" (optional) (string) (default: '')
    - "links" (optional) (array of Link components) (default: []):
    - "logos" (optional) (array of images objects) (default: []):
        "title": (string) (default: '') Title attribute
        "alt": (string) (default: '') Alternative text
        "src": (string) (default: '') Url of the image
        "class_name": (string) (default: '') Extra class for the logo
  - "extra_classes" (optional) (string) (default: '') Extra classes (space separated) for the icon
  - "extra_attributes" (optional) (array) (default: []) Extra attributes for icon
    - "name" (string) Attribute name, eg. 'data-test'
    - "value" (string) Attribute value, eg: 'data-test-1'
#}

{# Internal properties #}

{% set _group = group|default('group1') %}
{% set _sections = sections|default([]) %}
{% set _css_class = 'ecl-footer-harmonised ecl-footer-harmonised--' ~ _group %}
{% set _extra_attributes = '' %}
{% set _section_logos_class_names = 'ecl-footer-harmonised__logo-list' %}
{% set _logo_class = 'ecl-footer-harmonised__logo' %}
{% set _internal_wrapper = false %}

{# Internal logic - Process properties #}

{% if extra_classes is defined and extra_classes is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ extra_classes %}
{% endif %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% if attr.value is defined %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name ~ '="' ~ attr.value|e ~ '"' %}
    {% else %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name %}
    {% endif %}
  {% endfor %}
{% endif %}

{# Print the result #}

<footer class="{{ _css_class }}"{{ _extra_attributes|raw }}>
  {# Main container #}
  <div class="ecl-container ecl-footer-harmonised__container">
  {% for _full_section in _sections %}
    {# Section #}
  {% set _internal_wrapper = false %}
  {# sections can contain sub-sections #}
  {% if _full_section[1] is defined and _full_section[1] is not empty %}
    {% set _grouped_section = _full_section %}
    {% set _internal_wrapper = true %}
    {# The wrapper of a section containing sub-sections is a div #}
    <div class="{{ 'ecl-footer-harmonised__section' ~ _full_section[0].section_id }}">
  {% else %}
    {# The wrapper of a section without sub-section is a section #}
    <section class="ecl-footer-harmonised__section {{ 'ecl-footer-harmonised__section' ~ _full_section.section_id }}">
    {% set _grouped_section = [_full_section] %}
  {% endif %}
  {# Starts looping #}
  {% for section in _grouped_section %}
    {# Sub-section wrapperg #}
    {% if _internal_wrapper and section.title is defined %}
      <section class="ecl-footer-harmonised__section">
    {% endif %}
    {# content before #}
    {% if section.content_before is defined and section.content_before is not empty %}
      <div class="ecl-footer-harmonised__content">{{ section.content_before|raw }}</div>
    {% endif %}
    {# title #}
    {% if section.title is defined and section.title is not empty %}
      {% set _title_class_name = 'ecl-footer-harmonised__title' %}
    {% if section.title_class_name is defined and section.title_class_name is not empty %}
      {% set _title_class_name = _title_class_name ~ ' ' ~ section.title_class_name %}
    {% endif %}
    {% if section.title.link is defined and section.title.link is not empty %}
      {% include '@ecl-twig/ec-component-link/ecl-link.html.twig' with section|merge({
        link: section.title.link|merge({ type: 'standalone'}),
        extra_classes: _title_class_name,
        icon: section.title.icon|default({}),
      }) only %}
    {% else %}
      <div class="{{ _title_class_name }}">
        {{- section.title -}}
      </div>
    {% endif %}
    {% endif %}
    {# Logos #}
    {% if section.logos is defined and section.logos is not empty and section.logos is iterable %}
      {% if section.list_class_name is defined and section.list_class_name is not empty %}
        {% set _section_logos_class_names = _section_logos_class_names ~ ' ' ~ section.list_class_name %}
      {% endif %}
      <ul class="{{ _section_logos_class_names }}">
      {% for el in section.logos %}
        {% if el.logo.class_name is defined and el.logo.class_name is not empty %}
          {% set _logo_class = _logo_class ~ ' ' ~ el.logo.class_name %}
        {% endif %}
        <li class="ecl-footer-harmonised__logo-item">
          <img
            src="{{ el.logo.src }}"
            alt="{{ el.logo.alt }}"
            title="{{ el.logo.title }}"
            class="{{ _logo_class }}"
          />
        </li>
      {% endfor %}
      </ul>
    {% endif %}
    {# description #}
    {% if section.description is defined and section.description is not empty %}
      <div class="ecl-footer-harmonised__description">{{ section.description|raw }}</div>
    {% endif %}
    {# list #}
    {% if section.links is defined and section.links is not empty and section.links is iterable %}
      {% set _list_class_name = 'ecl-footer-harmonised__list' %}
      {% if section.list_class_name is defined and section.list_class_name is not empty %}
        {% set _list_class_name = _list_class_name ~ ' ' ~ section.list_class_name %}
      {% endif %}
      <ul class="{{ _list_class_name }}">
      {% for item in section.links %}
        <li class="ecl-footer-harmonised__list-item">
           {% include '@ecl-twig/ec-component-link/ecl-link.html.twig' with item|merge({
              link: item.link|default({})|merge({ type: 'standalone' }),
              extra_classes: 'ecl-footer-harmonised__link',
            }) only %}
        </li>
       {% endfor %}
      </ul>
    {% endif %}
    {% if _internal_wrapper %}
      </section>
    {% endif %}
  {% endfor %}
  {% if _internal_wrapper %}
    </div>
  {% else %}
    </section>
  {% endif %}
{% endfor %}
  </div>
</footer>

{% endspaceless %}
