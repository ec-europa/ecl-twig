{% spaceless %}

{#
  Parameters:
    - "description" (string) (default: ''),
    - "variant" (string) (default: ''): can be 'vertical',
    - "links" (array) (default: []): format: [
        {
          "path" (string) (default: ''),
          "label" (string) (default: ''),
          "icon_position" (string) (default: ''),
          "variant" (string) (default: ''),
          "icon" (array) : format: [
            {
              "name" (string),
              "size": (string),
              "path": (string),
              "extra_classes": (string)
            },
            ...
          ]
        },
        ...
      ]
    - "extra_classes" (string) (default: '')
    - "extra_attributes" (array) (default: []): format: [
        {
          "name" (string) (default: ''),
          "value" (string) (default: '')
        },
        ...
      ]
#}

{# Internal properties #}

{% set _css_class = 'ecl-social-media-follow' %}
{% set _extra_attributes = '' %}
{% set _description = description|default('') %}
{% set _links = links|default({}) %}
{% set _variant = variant|default('') %}

{# Internal logic - Process properties #}

{% if _variant is defined and _variant is not empty %}
  {% set _css_class = _css_class ~ ' ecl-social-media-follow--' ~ _variant %}
{% endif %}

{% if extra_classes is defined and extra_classes is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ extra_classes %}
{% endif %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name ~ '="' ~ attr.value ~ '"' %}
  {% endfor %}
{% endif %}

{# Print the result #}

<div class="{{ _css_class }}"{{ _extra_attributes|raw }}>
  <p class="ecl-social-media-follow__description">{{ _description }}</p>
  {% if _links is not empty %}
  <ul class="ecl-social-media-follow__list">
    {% for link in _links %}
    <li class="ecl-social-media-follow__item">
      {% set _link_classes = 'ecl-social-media-follow__link ecl-link' %}

      {% if link.variant is not empty %}
        {% set _link_classes = _link_classes ~ ' ' ~ 'ecl-link--' ~ link.variant %}
      {% endif %}

      {% if link.icon is defined and link.icon is not empty %}
      {% set _link_classes = _link_classes ~ ' ' ~ 'ecl-link--icon' %}
        {% if link.icon_position is defined and link.icon_position is not empty %}
          {% set _link_classes = _link_classes ~ ' ' ~ 'ecl-link--icon-' ~ link.icon_position %}
        {% endif %}
      {% endif %}

      <a href="{{ link.path }}" class="{{ _link_classes }}">
      {% if link.icon is defined and link.icon is not empty %}
      {% for icon in link.icon %}
      <svg focusable="false" aria-hidden="true" class="ecl-link__icon ecl-icon ecl-icon--{{ icon.size ~ ' ' ~ icon.extra_classes }}">
        <use xlink:href="{{ icon.path }}#{{ icon.name }}" />
      </svg>
      {% endfor %}
      {% endif %}
      <span class="ecl-link__label">{{ link.label }}</span>
      </a>
    </li>
    {% endfor %}
  </ul>
  {% endif %}
</div>

{% endspaceless %}
