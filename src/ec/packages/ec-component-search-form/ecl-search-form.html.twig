{% spaceless %}

{#
  Parameters:
    - "text_input" (associative array) default: A predefined structure for EC Text Input
    - "button" (associative array) default: A predefined structure for EC Button
    - "extra_classes" (string) (default: '')
    - "extra_attributes" (array) (default: []): format: [
        {
          "name" (string) (default: ''),
          "value" (optional) (string)
        ...
      ]
  Blocks:
    - "extra_form_elements"
#}

{# Internal properties #}

{% set _extra_form_elements = extra_form_elements|default('') %}
{% set _css_class = 'ecl-search-form' %}
{% set _extra_attributes = '' %}

{# Internal logic - Process properties #}

{% if extra_classes is defined and extra_classes is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ extra_classes %}
{% endif %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% if attr.value is defined %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name ~ '="' ~ attr.value|e ~ '"' %}
    {% else %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name %}
    {% endif %}
  {% endfor %}
{% endif %}

{# Print the result #}

<form class="{{ _css_class }}" role="search"{{ _extra_attributes|raw }}>
  {% if text_input is defined %}
    {% include '@ecl-twig/ec-component-text-input/ecl-text-input.html.twig' with text_input|merge({
      extra_label_classes: 'ecl-search-form__label',
    }) only %}
  {% endif %}
  {% if button is defined %}
    {% include '@ecl-twig/ec-component-button/ecl-button.html.twig' with button only %}
  {% endif %}
  {%- block extra_form_elements _extra_form_elements|raw -%}
</form>

{% endspaceless %}
