{% spaceless %}

{#
  Parameters:
  - "complaints" (string) (default: []):
#}

{# Internal properties #}

{% set _complaints = complaints|default('') %}

{# Rendering #}

{% if _complaints|length > 10 %}
  <div
    class="ecl2-compliance ecl-u-border-width-1 ecl-u-border-color-red ecl-u-border-style-solid"
  >
    <p class="ecl-u-type-color-grey ecl-u-ml-xl ecl-u-type-s">{{- _complaints -}}</p>
  </div>
{% else %}
  <hr class="ecl2-compliance ecl-u-border-width-1 ecl-u-border-color-green ecl-u-border-style-solid" />
{% endif %}

{% endspaceless %}
