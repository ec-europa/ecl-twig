{#
  Parameters:
  - "not-complaint" (boolean)
  - "message" (string)

  Blocks:
  - "complaints" (boolean)
  - "compliant" (string)
#}

{# Rendering #}

<!-- ################################################################################################################
    ecl2-compliance -->

{% if not_compliant %}
  {% block complaints %}
    <div
      class="ecl2-compliance ecl-u-border-width-1 ecl-u-border-color-red ecl-u-border-style-solid"
    >
      <p class="ecl-u-type-color-grey ecl-u-ml-xl ecl-u-type-s">
        {{ message }}
      </p>
    </div>
  {% endblock %}
{% else %}
  {% block compliant %}
    <hr class="ecl2-compliance ecl-u-border-width-1 ecl-u-border-color-green ecl-u-border-style-solid" />
  {% endblock %}
{% endif %}
