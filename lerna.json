{
  "version": "2.22.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "loglevel": "success",
  "packages": [
    "src/ec/packages/*",
    "src/eu/packages/*",
    "php/packages/ec/*"
  ],
  "command": {
    "create": {
      "license": "EUPL-1.1"
    },
    "publish": {
      "exact": true,
      "allowBranch": "master",
      "ignoreChanges": [
        "**/*.md",
        "**/demo/**",
        "**/__snapshots__/**",
        "**/*.story.js",
        "**/*.test.js"
      ]
    }
  }
}
